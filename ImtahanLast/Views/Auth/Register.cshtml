@using ImtahanLast.ViewModels.Autho
@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Bootstrap 4 Admin &amp; Dashboard Template">
    <meta name="author" content="Bdtask">
    <title>1</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/admin/dist/img/favicon.png">
    <!--Global Styles(used by all pages)-->
    <link href="~/admin/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/plugins/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="~/admin/plugins/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="~/admin/plugins/typicons/src/typicons.min.css" rel="stylesheet">
    <link href="~/admin/plugins/themify-icons/themify-icons.min.css" rel="stylesheet">
    <!--Third party Styles(used by this page)-->
    <!--Start Your Custom Style Now-->
    <link href="~/admin/dist/css/style.css" rel="stylesheet">
</head>
<body class="bg-white">
    <div class="d-flex align-items-center justify-content-center text-center h-100vh">
        <div class="form-wrapper m-auto">
            <div class="form-container my-4">
                <div class="panel">
                    <h1 style="text-align:center">Register</h1>
                    <form class="register-form" method="post">
                        <div class="form-group">
                            <input type="text" asp-for="FirstName" class="form-control" id="f_name" placeholder="First name">
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="LastName" class="form-control" id="l_name" placeholder="Last name">
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="UserName" class="form-control" id="l_name" placeholder="UserName">
                        </div>
                        <div class="form-group">
                            <input type="email" asp-for="Email" class="form-control" id="emial" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="Password" class="form-control" id="pass" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" id="pass" placeholder="ConfirmPassword">
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Sign up</button>
                        <div asp-validation-summary="ModelOnly"></div>
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.End of form wrapper -->
    <!--Global script(used by all pages)-->
    <script src="~/admin/plugins/jQuery/jquery-3.4.1.min.js"></script>
    <script src="~/admin/dist/js/popper.min.js"></script>
